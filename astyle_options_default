# WARNING: Filename astylerc is not used because this can also be found in seL4.
#-------------------------------------------------------------------------------

suffix=none
style=allman
indent=spaces=4
indent-classes
indent-namespaces
pad-oper
pad-header
pad-comma
add-brackets
align-pointer=type
align-reference=name
min-conditional-indent=0
lineend=linux
max-code-length=80
max-continuation-indent=60
